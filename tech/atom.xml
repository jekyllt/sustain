---
layout: null
category: tech
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}/{{ page.category }}</title>
    <atom:link href="{{ "/atom.xml" | prepend: page.category | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <link>{{ site.url }}{{ page.category }}</link>
    <description>{{ site.description | xml_escape }}</description>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    {% for post in site.posts limit:15 %}
    {% if post.category ==  page.category %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ post.url | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
        <description>{{ post.content | xml_escape }}</description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      </item>
    {% endif %}
    {% endfor %}
    <author>
      <name> {{ site.author }} </name>
      <email> {{ site.email }} </email>
    </author>
    <rights>Â© 2015 - {{ site.time | date: '%Y' }} Ethan Gregory Dodge. All rights reserved.</rights>
  </channel>
</rss>
